  $queue->link = '';
  $queue->link_remove = '';
  $queue->i18n = 1;
  $queue->show_in_links = 0;
  $queue->show_in_tab = 1;
  $queue->show_in_ui = 1;
  $queue->reference = 0;
  $queue->reverse = 0;
  $queue->i18n = 0;
